{
  "name": "rengasmarket-lappeenranta",
  "version": "1.0.0",
  "description": "Rengasmarket Lappeenranta - Modern tire company website",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "node build.js",
    "build:css": "tailwindcss -i ./public/tailwind.css -o ./public/styles.css --watch",
    "build:css:prod": "tailwindcss -i ./public/tailwind.css -o ./public/styles.css --minify",
    "predeploy": "npm run build"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "tailwindcss": "^3.4.17"
  },
  "keywords": [
    "tire",
    "website",
    "finnish",
    "lappeenranta"
  ],
  "author": "Rengasmarket Lappeenranta",
  "license": "MIT"
}
